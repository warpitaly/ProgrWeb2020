<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>07FiltriSessioni</display-name>
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>it.units.progrweb2020.filtrisessioni.filters.LogFilter</filter-class>
    </filter>
    <filter>
        <filter-name>IdFilter</filter-name>
        <filter-class>it.units.progrweb2020.filtrisessioni.filters.IdFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CopyrightFilter</filter-name>
        <filter-class>it.units.progrweb2020.filtrisessioni.filters.CopyrightFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CopyrightFilter</filter-name>
        <url-pattern>/AggiungiAlieni.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>IdFilter</filter-name>
        <url-pattern>/addAlien</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ServletUno</servlet-name>
        <servlet-class>it.units.progrweb2020.filtrisessioni.servlets.ServletUno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDue</servlet-name>
        <servlet-class>it.units.progrweb2020.filtrisessioni.servlets.ServletDue</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAlien</servlet-name>
        <servlet-class>it.units.progrweb2020.filtrisessioni.servlets.AddAlien</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionSet</servlet-name>
        <servlet-class>it.units.progrweb2020.filtrisessioni.servlets.SessionSet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionGet</servlet-name>
        <servlet-class>it.units.progrweb2020.filtrisessioni.servlets.SessionGet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletUno</servlet-name>
        <url-pattern>/ServletUno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDue</servlet-name>
        <url-pattern>/ServletDue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAlien</servlet-name>
        <url-pattern>/addAlien</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionSet</servlet-name>
        <url-pattern>/SessionSet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionGet</servlet-name>
        <url-pattern>/SessionGet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
